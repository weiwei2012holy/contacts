        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="600"
        xmlns:views="clr-namespace:Contacts.Views"
        x:Class="Contacts.Views.MainWindow"
